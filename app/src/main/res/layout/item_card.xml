<?xml version="1.0" encoding="utf-8"?>
<com.wajahatkarim3.easyflipview.EasyFlipView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flipView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:flipDuration="400"
    app:flipEnabled="true"
    app:flipOnTouch="false">

    <!-- Back Layout Goes Here -->
    <!-- <include layout="@layout/item_flip_back" />-->
    <LinearLayout
        android:id="@+id/llParentBack"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_margin="@dimen/cards"
        android:background="@drawable/bg_gradient"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/outline_question_mark_black_24dp"/>
    </LinearLayout>

    <!-- Front Layout Goes Here -->
    <!-- <include layout="@layout/item_flip_front" />-->
    <LinearLayout
        android:id="@+id/llParentFront"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_margin="@dimen/cards"
        android:background="#000"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgPreview"
            android:layout_width="100dp"
            android:layout_height="150dp" />
    </LinearLayout>

</com.wajahatkarim3.easyflipview.EasyFlipView>